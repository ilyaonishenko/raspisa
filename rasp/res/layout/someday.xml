<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView android:layout_width="wrap_content"
              android:text="Some text"
              android:layout_gravity="center_horizontal"
              android:textSize="10pt"
              android:layout_marginTop="10pt"
              android:id="@+id/tvTitle"
              android:layout_height="wrap_content"/>
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_marginLeft="5pt"
                    android:layout_marginTop="10pt"
                    android:layout_height="match_parent">
        <TextView android:layout_width="match_parent"
                  android:text="8:00-10:00"
                  android:id="@+id/tvTimeMon"
                  android:layout_marginTop="10pt"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="match_parent"
                  android:layout_marginTop="45pt"
                  android:text="10:00-12:00"
                  android:id="@+id/tvTimeMon2"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="match_parent"
                  android:layout_marginTop="80pt"
                  android:text="12:00-14:00"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="match_parent"
                  android:layout_marginTop="115pt"
                  android:text="14:00-16:00"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="match_parent"
                  android:layout_marginTop="150pt"
                  android:text="16:00-18:00"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="match_parent"
                  android:layout_marginTop="10pt"
                  android:layout_marginLeft="50pt"
                  android:text="Some Text"
                  android:id="@+id/tvfor8"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_marginTop="45pt"
                  android:layout_marginLeft="50pt"
                  android:text="Some Text"
                  android:id="@+id/tvfor10"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_marginTop="80pt"
                  android:layout_marginLeft="50pt"
                  android:text="Some Text"
                  android:id="@+id/tvfor12"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_marginTop="115pt"
                  android:layout_marginLeft="50pt"
                  android:text="Some Text"
                  android:id="@+id/tvfor14"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_marginTop="150pt"
                  android:layout_marginLeft="50pt"
                  android:text="Some Text"
                  android:id="@+id/tvfor16"
                  android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>